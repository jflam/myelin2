{
    "name": "My Readability",
    "description": "Simplest possible readability.js based extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["readability.js"]
        }
    ],
    "permissions": [ 
        "activeTab", 
        "scripting"
    ],
    "action": {
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        },
        "default_title": "Save this page to myelin"
    }
}